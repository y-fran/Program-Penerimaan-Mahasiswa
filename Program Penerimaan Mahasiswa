#include<iostream>
#include<algorithm>

using namespace std;



struct MataPelajaran {
    string nama;
    int skor;
};



struct Anak {
    string nama;
    MataPelajaran nilai[7];
    int totalSkor;
};


void isiNilai(MataPelajaran* mataPelajaran) {
    for (int i = 0; i < 7; i++) {
        cout << "Masukkan skor " << mataPelajaran[i].nama << ": ";
        cin >> mataPelajaran[i].skor;
    }
}



int hitungTotalSkor(MataPelajaran* mataPelajaran) {
    int total = 0;
    for (int i = 0; i < 7; i++) {
        total += mataPelajaran[i].skor;
    }
    return total;
}




// Fungsi untuk mencari anak dengan total skor di atas 600
int cariAnak(Anak* anak, int jumlahAnak) {
    for (int i = 0; i < jumlahAnak; i++) {
        if (anak[i].totalSkor > 600) {
            return i;
        }
    }
    return -1;
}



void sortAnak(Anak* anak, int jumlahAnak) {
    for (int i = 0; i < jumlahAnak - 1; i++) {
        for (int j = 0; j < jumlahAnak - i - 1; j++) {
            if (anak[j].totalSkor < anak[j + 1].totalSkor) {
                swap(anak[j], anak[j + 1]);
            }
        }
    }
}




void tampilkanDataAnak(Anak* anak, int jumlahAnak) {
    cout << "Data Anak:\n";
    for (int i = 0; i < jumlahAnak; i++) {
        cout << "Anak ke-" << i + 1 << ": " << anak[i].nama << " - Total Skor: " << anak[i].totalSkor << "\n";
    }
}

int main() {
    const int jumlahAnak = 3;
    Anak anak[jumlahAnak];
    
    

    for (int i = 0; i < jumlahAnak; i++) {
        cout << "Masukkan nama anak ke-" << i + 1 << ": ";
        cin >> anak[i].nama;



        isiNilai(anak[i].nilai);
        anak[i].totalSkor = hitungTotalSkor(anak[i].nilai);
    }



    sortAnak(anak, jumlahAnak);
    tampilkanDataAnak(anak, jumlahAnak);

    int indeksAnakDiterima = cariAnak(anak, jumlahAnak);

    if (indeksAnakDiterima != -1) {
        cout << "\nAnak yang diterima ke universitas: " << anak[indeksAnakDiterima].nama << "\n";
    } else {
        cout << "\nTidak ada anak yang diterima ke universitas.\n";
    }

    return 0;
}
